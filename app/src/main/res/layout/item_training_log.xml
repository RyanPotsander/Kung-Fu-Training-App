<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardBackgroundColor="?attr/colorPrimary"
    card_view:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:clickable="true"
        android:background="@drawable/ripple">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:id="@+id/linear_training_date"
            android:elevation="3dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jan"
                android:id="@+id/text_training_month"
                android:textSize="18sp"
                android:textColor="@color/primary_text"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17"
                android:id="@+id/text_training_day"
                android:textSize="48sp"
                android:textColor="@color/primary_text"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/linear_training"
            android:layout_toRightOf="@+id/linear_training_date"
            android:elevation="1dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_training1"
                android:text="Chain Punching"
                android:textColor="@color/primary_text"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:gravity="center" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="x200"
                android:id="@+id/text_view_training3"
                android:textColor="@android:color/black"
                android:gravity="center_vertical|center|center_horizontal"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:layout_gravity="center" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
